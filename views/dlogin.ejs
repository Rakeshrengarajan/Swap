<body style="background-color: rgb(247, 247, 247);">

    <div class="d-flex justify-content-center align-items-center login-container">
        <form class="login-form text-center" method="POST" action="alogin">
            <h1 class="mb-5">Swap Login</h1>
            <div class="form-group">
                <input type="text" class="form-control form-control-lg" placeholder="Username" name="aname">
            </div>
            <div class="form-group">
                <input type="password" class="form-control form-control-lg" placeholder="Password" name="apwd">
            </div>
            <div class="forgot-link form-group d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="remember">
                    <label class="form-check-label" for="remember">Remember Password</label>
                </div>
            </div>

            <% if(alertbox == 1){ %>

                <div class="alert alert-danger">
                    <strong>Invalid</strong> username or password.
                </div>

                <%  }else{ %>

                <br>

                <% } %>

        <!-- <a class="btn mt-5 btn-lg btn-outline-dark btn-block" type="submit">Log in</a> -->
        <center><button type="submit" class="btn btn-outline-dark">Login</button></center>           
        </form>
    </div>
